{
  "name": "mellow",
  "version": "1.0.0",
  "description": "Mellow Contracts",
  "main": "index.js",
  "scripts": {
    "lint-sol": "solhint \"contracts/*.sol\"",
    "lint-ts": "eslint \"./test/*.t.sol\"",
    "lint": "npm run lint-sol && npm run lint-ts",
    "test": "npx hardhat test",
    "testnet:start": "npx hardhat node",
    "deploy:upgrade": "npx hardhat run --network base scripts/deploy-upgrade.ts",
    "verify:base": "npx hardhat verify --network base 0xfC8756F843E49d1A237aB96206BDF03459821313",
    "deploy:test": "npx hardhat run --network localhost scripts/deploy-upgrade-testnet.ts",
    "deploy:test-send": "npx hardhat run --network localhost scripts/sendEth.ts",
    "deploy:basegoerli": "npx hardhat run --network basegoerli scripts/deploy-upgrade-testnet.ts",
    "deploy:test-goerli": "npx hardhat run --network basegoerli scripts/test-goerli.ts"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "devDependencies": {
    "@nomicfoundation/hardhat-chai-matchers": "^2.0.2",
    "@nomicfoundation/hardhat-ethers": "^3.0.4",
    "@nomicfoundation/hardhat-network-helpers": "^1.0.9",
    "@nomicfoundation/hardhat-toolbox": "^3.0.0",
    "@nomicfoundation/hardhat-verify": "^1.1.1",
    "@typechain/ethers-v6": "^0.5.0",
    "@typechain/hardhat": "^9.0.0",
    "@types/chai": "^4.2.0",
    "@types/mocha": ">=9.1.0",
    "@typescript-eslint/eslint-plugin": "^5.12.0",
    "@typescript-eslint/parser": "^5.12.0",
    "chai": "^4.3.8",
    "eslint": "^8.9.0",
    "ethereum-waffle": "^3.4.0",
    "ethers": "^6.7.1",
    "hardhat": "^2.17.2",
    "hardhat-gas-reporter": "^1.0.9",
    "prettier": "^2.5.1",
    "prettier-plugin-solidity": "^1.0.0-beta.19",
    "solidity-coverage": "^0.8.4",
    "ts-node": "^10.4.0",
    "typechain": "^8.3.1",
    "typescript": "^4.5.5"
  },
  "dependencies": {
    "@nomicfoundation/hardhat-ledger": "^1.0.1",
